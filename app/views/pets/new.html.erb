<nav class="navbar navbar-inverse">
  <div class="container-fluid justify-content-between">
    <%= link_to pets_path do %>
      <i class="fa-solid fa-arrow-left-long fa-lg heading"></i>
    <% end %>
    <h2 class="text-center my-2 heading">Add a pet</h2>
    <p></p>
  </div>
</nav>

<div class="container">
  <%= simple_form_for(@pet, html: { class: 'form-container form' }) do |f| %>
    <div class="row mb-3">
      <div class="col-12">
        <%= f.input :name, placeholder: "Pet name", input_html: { class: "form-control input" } %>
      </div>
    </div>
    <div class="row mb-3">
      <div class="col-md-4 my-2">
        <%= f.input :specie, collection: Pet::SPECIE, input_html: { class: "form-control input" } %>
      </div>
      <div class="col-md-8">
        <%= f.input :breed, placeholder: "Breed", input_html: { class: "form-control input" } %>
      </div>
    </div>
    <div class="row mb-3">
      <div class="col-md-4 mt-3 mt-md-0">
        <%= f.input :weight, placeholder: "Weight", input_html: { class: "form-control input" } %>
      </div>
      <div class="col-md-8 mt-3 mt-md-0">
        <%= f.label :dob, "Date of birth", class: "mb-2" %>
        <%= f.input :dob, label: false, as: :date, start_year: Date.today.year - 50,
                              end_year: Date.today.year, order: [:day, :month, :year],
                              html5: true, placeholder: "Date of birth" %>
      </div>
    </div>
    <div class="row">
      <div class="d-grid gap-2">
        <%= f.submit class:"btn btn-primary" %>
      </div>
    </div>
  <% end %>
</div>
