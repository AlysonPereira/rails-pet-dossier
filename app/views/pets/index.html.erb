<nav class="navbar navbar-inverse">
  <div class="container-fluid justify-content-between">
    <%= link_to authenticated_root_path do %>
      <i class="fa-solid fa-arrow-left-long fa-lg heading"></i>
    <% end %>
    <h2 class="text-center my-2 heading">My pets</h2>
    <%= link_to new_pet_path do %>
      <i class="fa-solid fa-plus fa-lg heading"></i>
    <% end %>
  </div>
</nav>
<div class="container mt-2">
  <div class="row">
    <% @pets.each do |pet| %>
      <div class="col-6 my-2">
        <div class=" card-pet">
          <p class='mb-3 pet-text text-center'><strong><%= pet.name.capitalize %></strong></p>
          <%= link_to pet_path(pet), class:"text-decoration-none d-flex justify-content-center" do %>
            <% if pet.image.attached? %>
              <%= cl_image_tag pet.image.key, class:"img-pet img-fluid  img-pet-radius" %>
            <% else %>
              <%= image_tag 'paw-default.png', class:"img-pet img-fluid img-pet-radius" %>
            <% end %>
          <% end %>
          <i class="fa-solid fa-paw my-2 mx-2 "></i>
          <%= link_to pet_path(pet), class:"text-decoration-none" do %>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
</div>
