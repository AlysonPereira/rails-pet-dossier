<nav class="navbar navbar-inverse">
  <div class="container-fluid justify-content-between">
    <%= link_to pet_medicines_path(@pet) do %>
      <i class="fa-solid fa-arrow-left-long fa-lg heading"></i>
    <% end %>
    <h2 class="heading">Add a new medicine</h2>
    <p></p>
  </div>
</nav>

<div class="container">
  <%= simple_form_for [@pet, @medicine] do |f| %>
    <div class="row mt-2">
      <div class="col-12">
        <%= f.input :name, label: 'Medicine name' %>
      </div>
    </div>
    <div class="row">
      <div class="col-6">
        <%= f.input :dosage, label: 'Dosage' %>
      </div>
      <div class="col-6">
        <%= f.input :unit,collection: Medicine::UNIT, label: 'Unit' %>
      </div>
    </div>
    <div class="row">
      <div class="col-6">
        <%= f.input :start_date, html5: true, label: 'Start date' %>
      </div>
      <div class="col-6">
        <%= f.input :end_date, html5: true, label: 'End date' %>
      </div>
    </div>
    <div class="row">
      <div class="col-12">
        <%= f.input :period, label: 'Times/day' %>
      </div>
    </div>

    <div class="d-grid gap-2">
      <%= f.button :submit, 'Save', class: 'btn btn-primary' %>
    </div>
  <% end %>
</div>
