<nav class="navbar navbar-inverse">
  <div class="container-fluid justify-content-between">
    <%= link_to pet_path(@pet) do %>
      <i class="fa-solid fa-arrow-left-long text-dark"></i>
    <% end %>
    <a class="navbar-brand">Add Medicine for <strong><%= @pet.name %></strong></a>

    <p></p>
  </div>
</nav>

<div class="container">
  <%= simple_form_for [@pet, @medicine] do |f| %>
    <div class="row mt-2">
      <div class="col-12">
        <%= f.input :name, label: 'Medicine Name' %>
      </div>
    </div>
    <div class="row">
      <div class="col-6">
        <%= f.input :dosage, label: 'Dosage' %>
      </div>
      <div class="col-6">
        <%= f.input :unit, label: 'Unit' %>
      </div>
    </div>
    <div class="row">
      <div class="col-6">
        <%= f.input :start_date, html5: true, label: 'Start Date' %>
      </div>
      <div class="col-6">
        <%= f.input :end_date, html5: true, label: 'End Date' %>
      </div>
    </div>
    <div class="row">
      <div class="col-12">
        <%= f.input :period, label: 'Period' %>
      </div>
    </div>

    <div class="d-grid gap-2">
      <%= f.button :submit, 'Add', class: 'btn btn-primary' %>
    </div>
  <% end %>
</div>
