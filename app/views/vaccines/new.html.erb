<nav class="navbar navbar-inverse">
  <div class="container-fluid justify-content-between">
    <%= link_to pet_path(@pet) do %>
      <i class="fa-solid fa-arrow-left-long fa-lg text-dark"></i>
    <% end %>
    <a class="navbar-brand">Add Vaccine for <strong><%= @pet.name %></strong></a>

    <p></p>
  </div>
</nav>

<div class="container">
  <%= simple_form_for [@pet, @vaccine] do |f| %>
    <div class="row mt-2">
      <div class="col-12">
        <%= f.input :name, label: 'Name' %>
      </div>
      <div class="row">
        <div class="col-6">
          <%= f.input :vaccination_date, html5: :true, label: 'Vaccination Date' %>
        </div>
        <div class="col-6">
          <%= f.input :revaccination_period, collection: Vaccine::PERIOD, label: 'Revaccination Period' %>
        </div>
      </div>
    </div>
    <div class="d-grid gap-2">
      <%= f.button :submit, 'Create', class: 'btn btn-primary' %>
    </div>
  <% end %>
</div>
