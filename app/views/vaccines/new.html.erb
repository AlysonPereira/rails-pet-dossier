<%= simple_form_for @vaccine do |f| %>
  <div class="form-inputs">
    <%= f.input :name, label: 'Name' %>
    <%= f.input :vaccination_date, label: 'Vaccination Date', as: :date_picker %>
    <%= f.input :next_vaccination, label: 'Next Vaccination', as: :date_picker %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, 'Create', class: 'btn btn-primary' %>
  </div>
<% end %>
