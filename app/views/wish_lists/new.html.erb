<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-12 col-md-8">
      <h2 class="text-center mb-5">New Wish List</h2>
      <%= simple_form_for(@wishlist, html: { class: 'form-horizontal' }) do |f| %>
        <div class="form-group row">
          <%= f.label :title, class: 'col-form-label col-md-2' %>
          <div class="col-md-10">
            <%= f.input_field :title, class: 'form-control' %>
          </div>
        </div>
        <div class="form-group row my-2">
          <div class="col-md-10 offset-md-2">
            <%= f.submit 'Create', class: 'btn btn-primary' %>
            <%= link_to 'Back', wish_lists_path, class: 'btn btn-secondary' %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
