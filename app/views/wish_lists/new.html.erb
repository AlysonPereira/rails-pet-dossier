<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-12 col-md-8">
      <h2 class="text-center my-2 heading">New Wishlist</h2>
      <%= simple_form_for(@wishlist, html: { class: 'form-container form' }) do |f| %>
        <div class="row mb-3">
          <div class="col-12">
            <%= f.input :title, placeholder: "Wishlist title", input_html: { class: "form-control input" } %>
          </div>
        </div>
        <div class="row">
          <div class="d-grid gap-2">
            <%= f.submit 'Create', class: 'login-button btn btn-primary' %>
            <%= link_to 'Back', wish_lists_path, class: 'btn btn-back m-auto' %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
