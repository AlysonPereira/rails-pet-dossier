<nav class="navbar navbar-inverse">
  <div class="container-fluid justify-content-between">
    <%= link_to wish_lists_path do %>
      <i class="fa-solid fa-arrow-left-long fa-lg heading"></i>
    <% end %>
    <h2 class="heading">New Wishlist</h2>
    <p></p>
  </div>
</nav>
<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-12 col-md-8">
      <%= simple_form_for(@wishlist, html: { class: 'form-container form' }) do |f| %>
        <div class="row mb-3">
          <div class="col-12">
            <%= f.input :title, placeholder: "Wishlist title", input_html: { class: "form-control input" } %>
          </div>
        </div>
        <div class="row">
          <div class="d-grid gap-2">
            <%= f.submit 'Create', class: 'login-button btn btn-primary' %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
