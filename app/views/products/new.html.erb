<nav class="navbar navbar-inverse">
  <div class="container-fluid justify-content-between">
    <%= link_to wish_list_path(@wishlist) do %>
      <i class="fa-solid fa-arrow-left-long fa-lg heading"></i>
    <% end %>
    <h2 class="text-center my-2 heading">Add product</h2>
    <p></p>
  </div>
</nav>
<div class="container">
  <%= simple_form_for [@wishlist, @product], html: { class: 'form-container form' } do |f| %>
    <div class="row mb-3">
      <div class="col-12">
        <%= f.input :name, placeholder: "Product name", input_html: { class: "form-control input" } %>
      </div>
    </div>
    <div class="row mb-3">
      <div class="col-12 my-2">
        <%= f.input :price, placeholder: "Price", input_html: { class: "form-control input" } %>
      </div>
    </div>
    <div class="row">
      <div class="col-12">
        <div class="d-grid gap-2">
          <%= f.submit 'Save', class:"login-button btn btn-primary" %>
        </div>
      </div>
    </div>
  <% end %>
</div>
